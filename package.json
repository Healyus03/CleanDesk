  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-wix": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "wait-on": "^9.0.3"
  }
}
