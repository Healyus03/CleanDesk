{
  "name": "cleandesk",
  "productName": "CleanDesk",
  "version": "1.0.1",
  "description": "CleanDesk â€” automatic file organizer desktop app",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"npm run start:electron\"",
    "start:renderer": "npm --prefix renderer start",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build:renderer": "npm run build --prefix renderer",
    "package": "electron-forge package",
    "make": "electron-forge make --platform=win32 --arch=x64",
    "dist": "npm run build:renderer && electron-forge make --platform=win32 --arch=x64"
  },
